<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScrollView"
    tools:context=".fragment.screens.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <EditText
            android:id="@+id/txtSearch"
            style="@style/TextNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.9"
            android:background="@drawable/edittext_search"
            android:drawableEnd="@drawable/ic_search"
            android:drawablePadding="15dp"
            android:hint="Search"
            android:inputType="text"
            android:padding="15dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:ignore="HardcodedText" />

        <HorizontalScrollView
            android:id="@+id/scrollCategory"
            style="@style/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="@+id/txtSearch"
            app:layout_constraintStart_toStartOf="@+id/txtSearch"
            app:layout_constraintTop_toBottomOf="@+id/txtSearch">

            <LinearLayout
                android:id="@+id/layCategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAccounts"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/button_category_background_transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:text="Accounts"
                    android:textColor="@color/foreground_less" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBankCards"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/button_category_background_transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:text="Bank cards"
                    android:textColor="@color/foreground_less" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContacts"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/button_category_background_transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:text="Contacts"
                    android:textColor="@color/foreground_less" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNotes"
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_category_background_transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"
                    android:text="Notes"
                    android:textColor="@color/foreground_less" />

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcTableContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/layBottom"
            app:layout_constraintTop_toBottomOf="@+id/scrollCategory" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieEmpty"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/empty_box"
            app:lottie_speed="2" />

        <TextView
            android:id="@+id/tvEmpty"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noting found"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/lottieEmpty"
            app:layout_constraintStart_toStartOf="@+id/lottieEmpty"
            app:layout_constraintTop_toBottomOf="@+id/lottieEmpty"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvEmptyDescription"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use + button to add new item"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvEmpty"
            app:layout_constraintStart_toStartOf="@+id/tvEmpty"
            app:layout_constraintTop_toBottomOf="@+id/tvEmpty"
            tools:ignore="HardcodedText" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Search"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/theme"
            app:elevation="0dp"
            app:fabCustomSize="60dp"
            app:layout_constraintBottom_toTopOf="@+id/layBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/black"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/layBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_borderless"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvShare"
                style="@style/TextSmallClickable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Share"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_share"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvCopy"
                style="@style/TextSmallClickable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Copy"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_copy"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvDelete"
                style="@style/TextSmallClickable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Delete"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_delete"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>